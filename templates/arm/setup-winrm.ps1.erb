$hostname = '<%= dns_label_prefix %>.<%= location %>.cloudapp.azure.com'
& 'C:\Program Files (x86)\Windows Kits\8.1\bin\x64\makecert.exe' -n 'CN=$hostname'  -pe -ss my -sr LocalMachine -sky exchange -m 96 -a sha1 -len 2048 -eku 1.3.6.1.5.5.7.3.1 -r My_Root_CA.cer
$Cert = Get-ChildItem Cert:\LocalMachine\My
$transport = New-Item -Path WSMan:/LocalHost/Listener -Transport HTTPS -Address * -CertificateThumbPrint $Cert[0].Thumbprint -Force
cd $transport.PSPath
set-item  ./HostName -value $hostname -force
set-item  ./Port -value 5986 -force
netsh advfirewall firewall add rule name=WinRM_HTTPS dir=in action=allow protocol=TCP localport=<%= winrm_port %>
